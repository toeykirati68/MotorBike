<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.toey_kirati.motorbike.MenuBike">

    <TextView
        android:id="@+id/txtmenu"
        android:layout_width="268dp"
        android:layout_height="62dp"
        android:layout_marginTop="31dp"
        android:text="Menu"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.353" />

    <Button
        android:id="@+id/btncancel"
        android:layout_width="154dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:onClick="clickmainactivity"
        android:text="ยกเลิก"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.891"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnorder"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="clickchonorder"
        android:text="รายการที่สั่ง"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btncancel"
        app:layout_constraintTop_toBottomOf="@+id/livmenu" />

    <LinearLayout
        android:id="@+id/livmenu"
        android:layout_width="355dp"
        android:layout_height="399dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="9dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtmenu"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btncancel"></LinearLayout>

</android.support.constraint.ConstraintLayout>
